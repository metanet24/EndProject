@model Paginate<BlogListVM>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Product</h4>
            <a asp-action="Create" class="btn btn-success">Create</a>
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>
                                Image
                            </th>
                            <th>
                                Name
                            </th>
                            <th>
                                Setting
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Datas)
                        {
                            <tr>
                                <td>
                                    <img src="~/assets/images/@item.Image" style="width: 100px; height: 100px;" />
                                </td>
                                <td>
                                    @item.Name
                                </td>
                                <td>
                                    <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-info">Detail</a>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                                    <a class="btn btn-danger delete-item" id="@item.Id">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <div class="col-12">
                    <nav class="paginate" data-aos="fade-right" style="display: flex; justify-content: center; margin-bottom: 20px;" aria-label="Page navigation example">
                        <ul class="pagination">
                            <li class="page-item @(!Model.Previous ? "disabled" : "")">
                                <a asp-route-page="@(Model.CurrentPage - 1)" class="page-link" aria-label="Previous">
                                    <span aria-hidden="true">&laquo;</span>
                                </a>
                            </li>

                            @for (int i = 1; i <= Model.TotalPage; i++)
                            {
                                <li class="page-item @(Model.CurrentPage != i ? "" : "disabled")"><a asp-route-page="@i" class="page-link">@i</a></li>
                            }

                            <li class="page-item @(Model.Next ? "" : "disabled")">
                                <a asp-route-page="@(Model.CurrentPage + 1)" class="page-link" aria-label="Next">
                                    <span aria-hidden="true">&raquo;</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>