@model Paginate<FamousListVM>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Product</h4>
            <a asp-action="Create" class="btn btn-success">Create</a>
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>
                                Image
                            </th>
                            <th>
                                Full Name
                            </th>
                            <th>
                                About
                            </th>
                            <th>
                                Setting
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Datas)
                        {
                            <tr>
                                <td>
                                    <img src="~/assets/images/@item.Image" style="width: 100px; height: 100px;" />
                                </td>
                                <td>
                                    @item.FullName
                                </td>
                                <td>
                                    @item.About
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                                    <a class="btn btn-danger delete-item" id="@item.Id">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>

                <div class="col-12">
                    <div class="pagination d-flex justify-content-center mt-5">
                        <a asp-route-page="@(Model.CurrentPage - 1)" class="rounded @(Model.Previous == false ? "disabled" : "")">&laquo;</a>
                        @for (int i = 1; i <= Model.TotalPage; i++)
                        {
                            <a asp-route-page="@i" class="rounded @(Model.Next == true ? "" : "disabled")">@i</a>
                        }
                        <a asp-route-page="@(Model.CurrentPage + 1)" class="rounded @(Model.Next == true ? "" : "disabled")">&raquo;</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>