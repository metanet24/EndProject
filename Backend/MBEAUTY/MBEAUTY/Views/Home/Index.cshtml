@model HomeVM

@{
    ViewData["Title"] = "Home Page";
}

<section data-aos="fade-in" class="slider first-sec">
    <div class="single-item">
        @foreach (var item in Model.Sliders)
        {
            <div class="slider-content" style="background-image: url(./assets/images/@item.Image);height: 800px;width: 577px;">
            </div>
        }
    </div>
</section>

<section data-aos="fade-up" class="best">

    <div data-aos="fade-up" class="best-seller">
        <div class="bs-text">
            <div><img src="https://www.ncodetechnologies.com/zooy/images/tit-deco.png" alt=""></div>
            <span class="punchline">Top Sale On This Week</span>
            <h2 class="sec-title">Best Seller</h2>
        </div>

        <div class="best-seller-card" style="display: flex;">
            @foreach (var item in Model.Products.Where(m => m.DiscountPercent > 0).Take(3))
            {
                <div class="product-card">
                    <div class="badge">@item.BrandName</div>
                    <div class="product-tumb">
                        <img src="~/assets/images/@item.ProductImages.FirstOrDefault(m => m.IsMain)?.Name" alt="">
                    </div>
                    <div class="product-details">
                        <span class="product-catagory">@item.CategoryName</span>
                        <h4><a href="">@item.Name</a></h4>
                        <div class="product-bottom-details">
                            <div class="product-price"><small>$@item.Price.ToString("N2")</small>$@(((item.Price / 100) * item.DiscountPercent).ToString("N2"))</div>
                            <div class="product-links">
                                <a href=""><i class="fa fa-shopping-cart"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
</section>

<section class="find-section">
    <div class="find">
        <div data-aos="fade-up" class="find-div">
            <h2 class="find-h2">@Model.Products.FirstOrDefault().Description</h2>
            <a class="btn btn-dark explore" asp-action="Detail" asp-controller="Product" asp-route-id="@Model.Products.FirstOrDefault().Id"><span>Shop Now</span></a>
        </div>
        <div data-aos="fade-up" class=""><img class="foto-find" src="~/assets/images/@Model.Products.FirstOrDefault().ProductImages.FirstOrDefault(m => m.IsMain)?.Name" alt=""></div>
    </div>
</section>

<section data-aos="fade-up" class="best">

    <div data-aos="fade-up" class="best-seller">
        <div class="bs-text">
            <div><img src="https://www.ncodetechnologies.com/zooy/images/tit-deco.png" alt=""></div>
            <span class="punchline">The newest ones</span>
            <h2 class="sec-title">New</h2>
        </div>

        <div class="best-seller-card" style="display: flex;">
            @foreach (var item in Model.Products.Take(3))
            {
                <div class="col-3">

                    <div class="product-card">
                        <div class="badge">@item.BrandName</div>
                        <div class="product-tumb">
                            <img src="~/assets/images/@item.ProductImages.FirstOrDefault(m => m.IsMain)?.Name" alt="">
                        </div>
                        <div class="product-details">
                            <span class="product-catagory">@item.CategoryName</span>
                            <h4><a href="">@item.Name</a></h4>
                            <div class="product-bottom-details">
                                <div class="product-price">$@item.Price.ToString("N2")</div>
                                <div class="product-links">
                                    <a href=""><i class="fa fa-shopping-cart"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>

            }
        </div>
    </div>
</section>


<section data-aos="fade-up" style="background-image: url(assets/images/@Model.Banner.Image);" class="dealofday">
    <div class="divday">
        <h2 style="margin-bottom: 25px;">@Model.Banner.Title</h2>
        <h4>@Model.Banner.Description</h4>
        <div style="margin-top: 60px;">
            <div class="countdown-timer-container">
                <div style="display: none;" class="countdown-timer-values" id="year">2024</div>
                <div style="display: none;" class="countdown-timer-values" id="mounth">12</div>
                <div class="countdown-timer-values" id="days">26</div>
                <div class="countdown-timer-values" id="hours">00</div>
                <div class="countdown-timer-values" id="minutes">00</div>
                <div class="countdown-timer-values" id="seconds">00</div>
                <div class="countdown-div">days</div>
                <div class="countdown-div">hours</div>
                <div class="countdown-div">minutes</div>
                <div class="countdown-div">seconds</div>
            </div>
        </div>
        <div class="slide-btn">
            <a class="btn common-btn btnday" asp-action="Index" asp-controller="Shop" tabindex="0"><span>Shop Now</span><i class="icon-next"></i></a>
        </div>
    </div>
</section>


