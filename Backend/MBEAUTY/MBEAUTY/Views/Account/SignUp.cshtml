@model SignUpVM

@{
    ViewData["Title"] = "SignUp";
}

<section data-aos="fade-up" style="background-image: url(assets/images/about-backgroundrealfirst.jpg);" class="first-sec dealofday intro aos-init aos-animate">
    <div data-aos="fade-right" class="divday">
        <p class="p-intro">HOME<i class="bi bi-chevron-right"></i><span class="span-intro">REGISTER</span></p>
        <h4 class="h4-intro">REGISTER</h4>
    </div>
</section>

<section class="login-sec">
    <div class="login-div">
        <div class="login-right">
            <div class="form-heading">
                <h2 class="form-tit">Create a New Account</h2>
                <p class="form-tit2">Add Your Personal Details</p>
                <div asp-validation-summary="ModelOnly" class="text-danger d-flex justify-content-center"></div>
            </div>
            <form method="post">
                <div class="row">
                    <div class="col-12">
                        <div class="form-group">
                            <input asp-for="FullName" class="form-control-1" placeholder="FullName *">
                            <span asp-validation-for="FullName" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">
                        <div class="form-group">
                            <input asp-for="UserName" class="form-control-1" placeholder="User name *">
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-group">
                            <input asp-for="Email" class="form-control-1" placeholder="Email Address *">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-group">
                            <input asp-for="Password" class="form-control-2" placeholder="Password *">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-group">
                            <input asp-for="ConfirmPassword" class="form-control-2" placeholder="Confirm Password *">
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <button class="btn submit-btn register-btn">Register</button>
                </div>
            </form>
        </div>

        <div>
            <div class="login-left register-left">
                <h2 class="login-h2 register-h2">Already have an Account?</h2>
                <a class="btn btn1 btn-login" asp-action="SignIn"><span>Login Now</span><i class="icon-next"></i></a>
            </div>
        </div>
    </div>
</section>